{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bets/service": ["apps/betting/src/services/BettingService.ts"],
      "@betting/*": ["apps/betting/src/*"],
      "@solspin/betting-types": ["@solspin/types/src/service/betting/types.ts"],
      "@solspin/errors": ["@solspin/errors/src/index.ts"],
      "@solspin/events": ["@solspin/events/src/index.ts"],
      "@solspin/treasury-types": ["@solspin/types/src/service/treasury/types.ts"],
      "@solspin/types": ["@solspin/types/src/index.ts"],
      "@solspin/wallet-types": ["@solspin/types/src/service/wallet/types.ts"],
      "@solspin/orchestration-types": ["@solspin/types/src/service/orchestration/types.ts"],
      "@solspin/websocket-types": ["@solspin/types/src/service/websocket/types.ts"],
      "@solspin/game-engine-types": ["@solspin/types/src/service/game-engine/types.ts"],
      "@solspin/logger": ["@solspin/utils/logger.ts"],
      "@solspin/validator": ["@solspin/utils/validator.ts"],
      "@solspin/user-management-types": ["@solspin/types/src/service/user-management/types.ts"],
      "@solspin/betting-schema": ["@solspin/schemas/src/service/betting/schema.ts"],
      "@solspin/gateway-responses": ["@solspin/utils/gateway-responses.ts"],
    }
  },
  "exclude": ["node_modules", "tmp"]
}
